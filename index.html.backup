  <script>
    // Simple mobile nav toggle
    document.querySelector('.nav-toggle').addEventListener('click', function() {
      document.querySelector('.nav').classList.toggle('nav-open');
      this.classList.toggle('active');
    });

    // Platform detection for legacy Chrome App
    (function() {
      var ua = navigator.userAgent;
      var isChromeOS = /\bCrOS\b/.test(ua);
      var warningText = '';

      if (!isChromeOS) {
        document.body.classList.add('not-chromeos');

        if (/Android/.test(ua)) {
          warningText = 'You\'re on Android. The new JSTorrent is coming soon!';
        } else if (/Mac|iPhone|iPad/.test(ua)) {
          warningText = 'You\'re on macOS/iOS. The legacy app only works on ChromeOS. Check out the new version above!';
        } else if (/Windows/.test(ua)) {
          warningText = 'You\'re on Windows. The legacy app only works on ChromeOS. Check out the new version above!';
        } else if (/Linux/.test(ua)) {
          warningText = 'You\'re on Linux. The legacy app only works on ChromeOS. Check out the new version above!';
        } else {
          warningText = 'The legacy app only works on ChromeOS. Check out the new version above!';
        }

        var warnings = document.querySelectorAll('.platform-warning');
        warnings.forEach(function(el) {
          el.textContent = warningText;
          el.style.display = 'block';
        });
      }
    })();
  </script>

